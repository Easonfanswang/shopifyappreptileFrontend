// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// 用户模型
model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // 关联
  chats     Chat[]     // 用户的所有对话
  messages  Message[]  // 用户发送的所有消息
}

// 对话模型 - 表示一个完整的对话会话
model Chat {
  id        String   @id @default(uuid())
  title     String?  // 对话标题
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // 关联
  userId    String   // 关联到用户
  user      User     @relation(fields: [userId], references: [id])
  messages  Message[] // 该对话中的所有消息

  @@index([userId])
}

// 消息模型 - 存储单条消息
model Message {
  id        String   @id @default(uuid())
  content   String   // 消息内容
  role      Role     // 消息角色：用户或AI
  createdAt DateTime @default(now())

  // 关联
  chatId    String   // 关联到对话
  chat      Chat     @relation(fields: [chatId], references: [id])
  userId    String   // 关联到用户
  user      User     @relation(fields: [userId], references: [id])

  @@index([chatId])
  @@index([userId])
}

// 消息角色枚举
enum Role {
  USER
  ASSISTANT
}
